@using sk.weblib.Modals
<div class="container-fluid vh-100 p-0 cardtable overflow-hidden">
    <div class="schafkopf-table h-100 w-100">
        @{var players = GetPlayersByView(); }
        <CascadingValue Value="publicGameState">
            @* top *@
            <div class="d-inline-flex vw-100" style="height: 20vh;">
                <div class="d-flex bg-transparent" style="width: 37.5%;">
                    <div class="btn-block">
                        <button type="button" class="btn btn-sm btn-outline-warning">Display an</button>
                        <button type="button" class="btn btn-sm btn-outline-light">Letzter Stich</button>
                    </div>
                    <div>
                        <p>@publicGameState.GameState</p>
                        <p>Pos: @publicGameState.YourPosition.GetValueOrDefault()</p>
                        <button class="btn btn-sm" @onclick="() => PlayTestCard(0)">Play1</button>
                        <button class="btn btn-sm" @onclick="() => PlayTestCard(1)">Play2</button>
                        <button class="btn btn-sm" @onclick="() => PlayTestCard(2)">Play3</button>
                        <button class="btn btn-sm" @onclick="() => PlayTestCard(3)">Play4</button>
                        <button class="btn btn-sm" @onclick="() => trickComponent?.Clear(0)">Clear</button>
                    </div>
                </div>

                <div class="d-flex position-relative" style="width: 25vw">
                    <OppPlayerComponent PlayerViewInfo="players[2]" />
                </div>

                <div class="d-flex align-items-end justify-content-end bg-transparent" style="width: 37.5%;">
                    <div class="align-self-start">
                        <button type="button" class="btn btn-sm btn-outline-danger">Verlassen</button>
                    </div>
                </div>
            </div>

            @* middle *@
            <div class="d-inline-flex vw-100" style="height: 50vh;">
                <div class="d-flex position-relative w-25">
                    <OppPlayerComponent PlayerViewInfo="players[1]" />
                </div>
                <div class="d-flex align-items-center justify-content-center w-50 bg-secondary rounded">
                    <div id="trick" class="w-100 h-100" style="z-index: 10;">
                        <TrickComponent @ref="trickComponent"></TrickComponent>
                    </div>
                </div>
                <div class="d-flex position-relative w-25">
                    <OppPlayerComponent PlayerViewInfo="players[3]" />
                </div>
            </div>

            @* bottom *@
            <div class="d-flex align-items-center justify-content-center w-100"           style="height: 30vh;">
                <PlayerComponent @ref="playerComponent" PlayerViewInfo="players[0]" OnCardPlayed="PlayCard" />
            </div>
        </CascadingValue>
    </div>
</div>

<Bidding1Modal @ref="bidding1Modal" OnWouldPlay="SubmitBidding1" />
<Bidding2Modal @ref="bidding2Modal" OnWouldPlay="SubmitBidding2" />