<div class="container-fluid vh-100 p-0 cardtable">
    <div class="schafkopf-table h-100 w-100">

        <!-- Top-left corner for settings -->
        <div class="corner top-left d-flex justify-content-start align-items-start p-3">
            <button class="btn btn-secondary">⚙️ Settings</button>
        </div>

        <!-- Top-right corner for other controls -->
        <div class="corner top-right d-flex justify-content-end align-items-start p-3">
            <button class="btn btn-info">ℹ️ Info</button>
        </div>

        <!-- Gegner oben -->
        <div class="player top rounded bg-primary overflow-hidden">
            <div style="transform: rotate(180deg);">
                <PlayerComponent TablePlayer="publicGameState.Table.Players[2]" PublicGameState="publicGameState" />
            </div>
        </div>

        <!-- Gegner links -->
        <div class="player left rounded bg-primary overflow-hidden">
            <div style="transform: rotate(90deg);">
                <PlayerComponent TablePlayer="publicGameState.Table.Players[1]" PublicGameState="publicGameState" />
            </div>
        </div>

        <!-- Tischmitte -->
        <div class="table-center d-flex justify-content-center align-items-center">
            <TrickComponent @ref="trickComponent" />
        </div>

        <!-- Gegner rechts -->
        <div class="player right rounded bg-primary overflow-hidden">
            <div style="transform: rotate(-90deg);">
                <PlayerComponent TablePlayer="publicGameState.Table.Players[3]" PublicGameState="publicGameState" />
            </div>
        </div>

        <!-- Eigener Spieler unten -->
        <div class="player bottom bg-transparent overflow-hidden">
            <PlayerComponent @ref="playerComponent" TablePlayer="publicGameState.Table.Players[0]"
                             PublicGameState="publicGameState" OnCardPlayed="PlayCard" />
        </div>

    </div>
</div>